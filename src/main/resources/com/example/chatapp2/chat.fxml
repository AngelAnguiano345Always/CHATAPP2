<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.chatapp2.ChatAppController">
    <ListView fx:id="mensajeLista"/>
    <HBox spacing="10">
        <TextField fx:id="mensajeField" HBox.hgrow="ALWAYS"/>
        <Button text="Enviar" onAction="#sendMessage"/>
    </HBox>
    <padding>
        <Insets top="25" right="20" bottom="25" left="20"/>
    </padding>
</VBox>
